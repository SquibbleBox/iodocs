        {
            "name" : "Live Sessions", 
            "methods" : [
                {
                    "MethodName" : "New Live Session",
                    "Synopsis" : "Creates a new Live Session",
                    "HTTPMethod" : "POST",
                    "URI" : "/api/live_sessions",
                    "RequiresOAuth" : "Y",
                    "content": {
                        "schema":{"type":"string"},
                        "contentType":["application/json"],
                        "parameters": [
                            {
                                "Name": "live_session",
                                "Required": "Y",
                                "Type": "object",
                                "Description": "",
                                "parameters": [
                                    {
                                        "Name": "colour_theme_id",
                                        "Required": "Y",
                                        "Type": "integer",
                                        "Description": "Colour theme ID",
                                        "default" : 1
                                    },
                                    {
                                        "Name": "name",
                                        "Required" : "Y",
                                        "Type" : "string",
                                        "Description" : "Session name"
                                    },
                                    {
                                        "Name": "user_list",
                                        "Required": "N",
                                        "Type": "list",
                                        "Description": "list of users to invite",
                                        "parameters": [
                                            {
                                                "Required": "Y",
                                                "Type": "integer"
                                            }
                                        ]
                                    },
                                    {
                                        "Name": "visible",
                                        "Required" : "Y",
                                        "Type" : "boolean",
                                        "Description" : "Indicates whether session is publicly visible"
                                    },
                                    {
                                        "Name" : "guest_permissions",
                                        "Required" : "N",
                                        "Type":"enumerated",
                                        "Default" : "chat",
                                        "EnumeratedList": [
                                            "draw",
                                            "chat"
                                        ],
                                        "EnumeratedDescription": {
                                            "draw": "Guests can draw & chat",
                                            "chat": "Guests can only chat"
                                        }
                                    }
                                ]
                            }
                        ]
                    },
                    "parameters" : [

                    ]   
                },
                {
                    "MethodName" : "Participating Sessions",
                    "Synopsis" : "Grabs sessions in which user is participating ",
                    "HTTPMethod" : "GET",
                    "URI" : "/api/live_sessions/participating",
                    "RequiresOAuth" : "Y",
                    "parameters" : []
                },
                {
                    "MethodName" : "Organized Sessions",
                    "Synopsis" : "Grabs sessions which have been organized by user ",
                    "HTTPMethod" : "GET",
                    "URI" : "/api/live_sessions/own",
                    "RequiresOAuth" : "Y",
                    "parameters" : []
                },             
                {
                    "MethodName" : "Public Sessions",
                    "Synopsis" : "Grabs public sessions ",
                    "HTTPMethod" : "GET",
                    "URI" : "/api/live_sessions/public",
                    "RequiresOAuth" : "Y",
                    "parameters" : []
                },
                {
                    "MethodName" : "Following Sessions",
                    "Synopsis" : "Grabs sessions that belong to users that current user is following",
                    "HTTPMethod" : "GET",
                    "URI" : "/api/live_sessions/following",
                    "RequiresOAuth" : "Y",
                    "parameters" : []
                },
                {   
                    "MethodName" : "Enter Sessions",
                    "Synopsis" : "Enters the given session",
                    "HTTPMethod" : "POST",
                    "URI" : "/api/live_sessions/:id/enter",
                    "RequiresOAuth" : "Y",
                    "parameters" : [
                        {
                            "Name" : "id",
                            "Required" : "Y",
                            "Type" : "integer",
                            "Description" : "Session ID"
                        }
                    ]
                },
                {   
                    "MethodName" : "Leave Sessions",
                    "Synopsis" : "Leaves the given session",
                    "HTTPMethod" : "POST",
                    "URI" : "/api/live_sessions/:id/leave",
                    "RequiresOAuth" : "Y",
                    "parameters" : [
                        {
                            "Name" : "id",
                            "Required" : "Y",
                            "Type" : "integer",
                            "Description" : "Session ID"
                        }
                    ]
                },
                {
                    "MethodName" : "Destroy Session",
                    "Synopsis" : "Destroys the given session",
                    "HTTPMethod" : "DELETE",
                    "URI" : "/api/live_sessions/:id",
                    "RequiresOAuth" : "Y",
                    "parameters" : [
                        {
                            "Name" : "id",
                            "Required" : "Y",
                            "Type" : "integer",
                            "Description" : "Session ID"
                        }
                    ]
                },
                {
                    "MethodName" : "End session",
                    "Synopsis"  : "Ends and Publishes given session",
                    "HTTPMethod" : "POST",
                    "URI" : "/api/live_sessions/:id/end",
                    "RequiresOAuth" : "Y",
                    "parameters" : [
                        {
                            "Name" : "id",
                            "Required" : "Y",
                            "Type" : "integer",
                            "Description" : "Session ID"
                        }
                    ]
                }
            ]
        }
    ]
